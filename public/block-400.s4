0(------------------------------------------------------------------------------)

:-Random numbers-;
:-Random 8/16-bit #-;
:RNB 256xR;
:RNW 400xR2xR(~1+);
:-connection[0|1][0-32]-;
:RCN RNB 159&;
:RNN RCN RCN;
:-Random world x/y (--n)-;
:RWX wsx@xR1+;         
:RWY wsy@xR1+;

0(----------------------------------------)
:-world stuff-;
150 wsx!
 40 wsy!
wsx@ wsy@ * wsz!       0(world size)
VAR wld! wsz@ ALT
:-normalize x/y-;
:WXN 0 MAX wsx@ MIN;   0(World X normalize (--x))
:WYN 0 MAX wsy@ MIN;   0(World Y normalize (--y))
:-world set/get at x/y-;
:WST $wsx@*+wld@+x!;   0(World Set (c x y--))
:WGT $wsx@*+wld@+x@;   0(World Get (x y--c))

